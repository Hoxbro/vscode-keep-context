{
  "name": "keep-context",
  "displayName": "Keep Context",
  "description": "Make context switch easy to be managed and tracked.",
  "version": "0.1.2",
  "publisher": "marlom",
  "icon": "images/keep-context.png",
  "engines": {
    "vscode": "^1.41.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:keepContext",
    "onFileSystem:file"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "keep-context",
          "title": "Keep Context",
          "icon": "images/keep-context.svg"
        }
      ]
    },
    "views": {
      "keep-context": [
        {
          "id": "keepContext",
          "name": "Tasks"
        }
      ]
    },
    "commands": [
      {
        "command": "keepContext.newTask",
        "title": "Create Task",
        "category": "Keep Context"
      },
      {
        "command": "keepContext.editTask",
        "title": "Edit Task",
        "icon": {
          "light": "images/light/edit.svg",
          "dark": "images/dark/edit.svg"
        }
      },
      {
        "command": "keepContext.deleteTask",
        "title": "Delete Task",
        "icon": {
          "light": "images/light/delete.svg",
          "dark": "images/dark/delete.svg"
        }
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "keepContext.newTask"
        }
      ],
      "view/title": [
        {
          "command": "keepContext.newTask",
          "when": "view == keepContext"
        }
      ],
      "view/item/context": [
        {
          "command": "keepContext.editTask",
          "when": "view == keepContext && viewItem == task_item",
          "group": "inline"
        },
        {
          "command": "keepContext.deleteTask",
          "when": "view == keepContext && viewItem == task_item",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [
    "context",
    "switch",
    "task"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marlomgirardi/vscode-keep-context.git"
  },
  "bugs": {
    "url": "https://github.com/marlomgirardi/vscode-keep-context/issues"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "12.12.21",
    "@types/vscode": "^1.41.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4",
    "vscode-test": "^1.3.0"
  }
}
